<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qxg.dao.admin.CourseDao" >
	<resultMap id="BaseResultMap" type="com.qxg.model.admin.Course" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="cname" property="cname" jdbcType="VARCHAR" />
		<result column="teacher" property="teacher" jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List" >
    id, cname, teacher, description
	</sql>
	
	<!--查看课程 列表 -->
	<select id="getAllCourse" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/> from t_course
	</select>
	<!--新增课程-->
	<insert id="insert" parameterType="com.qxg.model.admin.Course">
		insert into t_course(id,cname,teacher,description) values(#{id,jdbcType=INTEGER}, #{cname,jdbcType=VARCHAR}, #{teacher,jdbcType=VARCHAR}, 
      #{description,jdbcType=VARCHAR})
	</insert>
	<insert id="insertSelective" parameterType="com.qxg.model.admin.Course" >
    insert into t_course
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null" >
        id,
			</if>
			<if test="cname != null" >
        cname,
			</if>
			<if test="teacher != null" >
        teacher,
			</if>
			<if test="description != null" >
        description,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id != null" >
        #{id,jdbcType=INTEGER},
			</if>
			<if test="cname != null" >
        #{cname,jdbcType=VARCHAR},
			</if>
			<if test="teacher != null" >
        #{teacher,jdbcType=VARCHAR},
			</if>
			<if test="description != null" >
        #{description,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<!--删除课程-->
	<delete id="delete" parameterType="java.lang.Integer" >
    delete from t_course
    where id = #{id,jdbcType=INTEGER}
	</delete>
	
	<!--课程详情-->
	<select id="getCourseInfo" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
		<include refid="Base_Column_List" />
    from t_course
    where id = #{id,jdbcType=INTEGER}
	</select>
	<update id="updateSave"  parameterType="com.qxg.model.admin.Course">
		update t_course
    set cname = #{cname,jdbcType=VARCHAR},
      teacher = #{teacher,jdbcType=VARCHAR},
      description = #{description,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
	</update>
</mapper>